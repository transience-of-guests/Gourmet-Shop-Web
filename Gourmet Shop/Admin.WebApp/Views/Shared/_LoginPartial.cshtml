@using GourmetShop.DataAccess.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Authentication> SignInManager
@inject UserManager<Authentication> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">
                Hello @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form method="post" asp-controller="Admin" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="AdminRegister">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="AdminLogin">Login</a>
        </li>
}
</ul>
